<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Windy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_504</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="progressBarBlue" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="SettingsTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Override properties according to your need -->
        <item name="android:colorBackground">@color/white</item>
        <!--text summary-->
        <item name="android:colorForeground">@color/hour_text</item>
        <!--switch close-->
        <item name="colorSecondary">@color/purple_200</item>
        <!--title2Text-->
        <item name="android:textColorPrimary">@color/hour_text</item>
        <!--title1Text-->
        <item name="colorAccent">@color/purple_504</item>
        <!--switch open-->
        <item name="colorControlActivated">@color/purple_504</item>
        <!--on select item-->
        <item name="colorControlHighlight">@color/main_card</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@drawable/img_splash1</item>
        <!--item name="windowSplashScreenBackground">@color/purple_504</item-->
        <!--item name="windowSplashScreenAnimatedIcon">@drawable/ic_app_background</item-->
        <!--item name="windowSplashScreenAnimationDuration">200</item-->
        <item name="postSplashScreenTheme">@style/Theme.Windy</item>
    </style>
</resources>